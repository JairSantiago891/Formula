    <div class="panel-body">

        <div class="row">

            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-down" style="color:white"></i></a>
                        </div>
                        <i class="fa fa-exclamation" aria-hidden="true"></i>  Datos Generales
                    </div>
                    <div class="col-md-8">
                        <div class="col-lg-4 ">
                            <h5>Director</h5>
                            <input type="text" disabled class="form-control m-b-md" id="director" name="director-director" value="@(ViewBag.NombreDirector)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>Télefono</h5>
                            <input type="text" disabled class="form-control m-b-md" name="telefono-director" value="@(ViewBag.TelefonoDirector)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>Correo</h5>
                            <input type="text" disabled class="form-control m-b-md" name="correo-director" value="@(ViewBag.CorreoDirector)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>   <br />Ingeniero</h5>
                            <input type="text" disabled class="form-control m-b-mdd" name="ingeniero" value="@(ViewBag.NombreIngeniero)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>Télefono</h5>
                            <input type="text" disabled class="form-control m-b-md" name="telefono-ing" value="@(ViewBag.TelefonoIngeniero)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>Correo</h5>
                            <input type="text" disabled class="form-control m-b-md" name="correo-ing" value="@(ViewBag.CorreoIngeniero)">
                        </div>

                        <div class="col-lg-4 ">
                            <h5>Tipo Plaza <input type="checkbox" disabled class="icheckbox_square-green checked" name="tipo-plaza" @(ViewBag.PlazaActiva != null & ViewBag.PlazaActiva ? "checked" : "")></h5>

                        </div>
                    </div>
                    <div class="col-md-offset-2">
                        <h5>Logo</h5>
                        <input type="image" src="@(ViewBag.Logo)" alt="Submit" width="250px" height="120px" border="1">
                    </div>
                </div>
            </div>
            <div class="col-lg-2  ">
                @Html.ActionLink(" Agregar Plaza", "Create", null, new { data_modal = "", @class = "btn btn-primary-formula fa fa-plus-circle" })</>


            </div>
            <div class="col-lg-2  ">
                @Html.ActionLink(" Editar Plaza", "Edit", null, new { data_modal = "", @class = "btn btn-primary-formula fa fa-pencil-square-o " + ViewBag.edit })
            </div>

            <div class="col-lg-2  ">
                @Html.ActionLink(" Eliminar Plaza", "Delete", null, new { data_modal = "", @class = "btn btn-primary-formula fa fa-eraser " + ViewBag.edit })
            </div>
        </div>
    </div>
